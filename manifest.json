{
  "name": "Group Saviour",
  "description": "Extension allows you to manage your groups",
  "version": "1.0.0",
  "author": "Qweest",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "src/assets/images/main_icon16.png",
      "32": "src/assets/images/main_icon32.png",
      "48": "src/assets/images/main_icon48.png",
      "128": "src/assets/images/main_icon128.png"
    },
    "default_title": "Save your group tabs"
  },
  "icons": {
    "16": "src/assets/images/main_icon16.png",
    "32": "src/assets/images/main_icon32.png",
    "48": "src/assets/images/main_icon48.png",
    "128": "src/assets/images/main_icon128.png"
  },
  "permissions": ["storage", "tabs", "tabGroups"],
  "background": {
    "service_worker": "background.js"
  }
}